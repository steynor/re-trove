{
  "manifest_version": 3,
  "name": "Retrove",
  "version": "1.0",
  "description": "Estimates CO2 and water savings for second-hand products",
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
